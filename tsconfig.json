{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "outDir": "./",
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7"
        ],
        "types": [
            "obsidian-typings"
        ],
        "paths": {
          "$lib": ["./src/lib"],
          "$lib/*": ["./src/lib/*"]
        },
    },
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": [
        "**/globals.d.ts",
        "**/*.js",
        "**/*.svelte",
        "**/*.ts"
    ],
    "exclude": ["node_modules"]
}
